@model GlabsHelps.Models.DocumentoSolicitud

@{
    ViewBag.Title = "Create";
    Layout = null;
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<style>
    .form-control {
        justify-content: center;
        align-items: center;
        font-family: 'Times New Roman';
    }

    h4 {
        justify-content: center;
        align-items: center;
        font-family: 'Times New Roman';
    }

    .form-group {
        position: relative;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .control-label {
        display: inline;
    }

    .form-control input {
        font-family: 'Times New Roman';
    }

    a {
        font-family: 'Times New Roman';
    }

    input button {
        font-family: 'Times New Roman';
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Documento Solicitud</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Id Solicitud</label>
            <div class="col-md-10">
                <select id="IdSolicitud" name="IdSolicitud" class="form-control" required oninvalid="this.setCustomValidity('Seleccione una solicitud')" oninput="this.setCustomValidity('')">
                    <option value="0" disabled selected>Seleccionar Solicitud</option>
                    @foreach (var item in items)
                    {
                        <option value="@Convert.ToInt32(item.Value)">@item.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nombre Documento</label>
            <div class="col-md-10">
                <input id="NombreDocumento" name="NombreDocumento" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Nombre Documento no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Fecha Agregado</label>
            <div class="col-md-10">
                <input id="FechaAgregago" name="FechaAgregado" type="date" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Fecha Agregado no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Id Usuario</label>
            <div class="col-md-10">
                <input id="IdUsuario" name="IdUsuario" placeholder="Id Usuario" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Id Usuario no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo Documento</label>
            <div class="col-md-10">
                <input id="TipoDocumento" name="TipoDocumento" placeholder="Tipo Documento" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Tipo Documento no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/DocumentoSolicituds/Index" class="btn btn-primary" style="font-family: 'Times New Roman';">
                    Salir
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary" style="font-family:'Times New Roman';" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
