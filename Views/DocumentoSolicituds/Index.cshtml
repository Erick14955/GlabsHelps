@model IEnumerable<GlabsHelps.Models.DocumentoSolicitud>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Documento Solicitud</h2>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-xs-3" style="width: 190px;">
                <input type="search" name="busqueda" class="form-control" />
            </div>
            <div class="col-xs-3">
                <input type="submit" value="Buscar" class="btn btn-default border-dark" />
            </div>
            <div class="col-xs-3">
                <a id="ButtonNuevo" data-toggle="modal" data-target="#PopupEdit" class="btn btn-default border-dark" data-url="@Url.Action("Create")" style="position:relative; left:25%;">
                    Nuevo Documento
                </a>
            </div>
        </div>
        <br />
    }

    <div id="PopupEdit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="MiPopLabel" aria-hidden="true" style="display: none;" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" style="width:500px; height: 500px; position: relative;">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="modal-content">
                        Cargando...
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover table-sm">
        <tr>
            <th>
                Id Solicitud
            </th>
            <th>
                Nombre Documento
            </th>
            <th>
                Fecha Agregado
            </th>
            <th>
                Id Usuario
            </th>
            <th>
                Tipo Documento
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSolicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAgregado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                </td>
                <td>
                    <a id="EditarButton" data-toggle="modal" data-target="#PopupEdit" href="/DocumentoSolicituds/Edit/@item.IdSolicitud" class="btn btn-primary">
                        <i class="glyphicon glyphicon-pencil" style="color: black;"></i>
                    </a>
                    <a id="DetalleButton" data-toggle="modal" data-target="#PopupEdit" href="/DocumentoSolicituds/Details/@item.IdSolicitud" class="btn btn-primary">
                        <i class="glyphicon glyphicon-trash" style="color: black;"></i>
                    </a>
                    <a id="EliminarButton" data-toggle="modal" data-target="#PopupEdit" href="/DocumentoSolicituds/Delete/@item.IdSolicitud" class="btn btn-primary">
                        <i class="glyphicon glyphicon-trash" style="color: black;"></i>
                    </a>
                </td>
            </tr>
        }

    </table>

    @section scripts{

        <script src="~/Scripts/Botones/DocumentoSolicitudBotones.js"></script>
    }
</body>