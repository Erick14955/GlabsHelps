@model GlabsHelps.Models.Equipos


@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<style>
    .form-control {
        justify-content: center;
        align-items: center;
        font-family: 'Times New Roman';
    }

    h4 {
        justify-content: center;
        align-items: center;
        font-family: 'Times New Roman';
    }

    .form-horizontal {
        padding: 30px 40px;
    }

    .form-group {
        position: relative;
        padding-bottom: 20px;
        margin-bottom: 10px;
    }

    .control-label {
        display: inline-block;
        margin-bottom: 5px;
    }

    .form-control input {
        font-family: 'Times New Roman';
    }

    a {
        font-family: 'Times New Roman';
    }

    input button {
        font-family: 'Times New Roman';
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Equipos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Id Cliente</label>
            <div class="col-md-10">
                <input id="IdCliente" name="IdCliente" placeholder="Id Cliente" type="number" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Id Cliente no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Descripción</label>
            <div class="col-md-10">
                <input id="Descripcion" name="Descripcion" placeholder="Descripción" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Descripción no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Responsable</label>
            <div class="col-md-10">
                <input id="Responsable" name="Responsable" placeholder="Responsable" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Responsable no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Dirección AnyDesk</label>
            <div class="col-md-10">
                <input id="DireccionAnyDesk" name="DireccionAnyDesk" placeholder="Dirección AnyDesk" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Dirección AnyDesk no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Dirección TeamViewer</label>
            <div class="col-md-10">
                <input id="DireccionTeamViewer" name="DireccionTeamViewer" placeholder="Dirección TeamViewer" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Dirección TeamViewer no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ip Equipo</label>
            <div class="col-md-10">
                <input id="IpEquipo" name="IpEquipo" placeholder="Ip Equipo" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Ip Equipo no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ip Pública</label>
            <div class="col-md-10">
                <input id="IpPublica" name="IpPublica" placeholder="Ip Pública" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Ip Pública no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo Equipo</label>
            <div class="col-md-10">
                <input id="TipoEquipo" name="TipoEquipo" placeholder="Tipo Equipo" type="text" value="" class="form-control" required oninvalid="this.setCustomValidity('El campo Tipo Equipo no puede quedar vacío')" oninput="this.setCustomValidity('')" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UsuarioEquipo, "Usuario Equipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UsuarioEquipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsuarioEquipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClaveEquipo, "Clave Equipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClaveEquipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClaveEquipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Equipos/Index" class="btn btn-primary">
                    Salir
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

