@model IEnumerable<GlabsHelps.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-danger">
            @ViewBag.Message
        </div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" align="center">
        <h2>Iniciar Sesion</h2>
        <div class="form-group">
            <div class="col-md-10" style="left: 8%;">
                <input id="CorreoElectronico" name="CorreoElectronico" type="text" placeholder="Correo Electronico" value="" class="form-control" @*required oninvalid="this.setCustomValidity('El campo Nombre Documento no puede quedar vacío')" oninput="this.setCustomValidity('')"*@ />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="left: 8%;">
                <input id="Password" name="Password" type="text" placeholder="Contraseña" value="" class="form-control" @*required oninvalid="this.setCustomValidity('El campo Nombre Documento no puede quedar vacío')" oninput="this.setCustomValidity('')"*@ />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="right: 9%">
                <input type="submit" value="Iniciar Sesion" class="btn btn-primary" style="font-family:'Times New Roman';" />
                <a href="/Usuarios/Create" class="btn btn-primary" style="font-family: 'Times New Roman';">
                    Registrarse
                </a>
            </div>
        </div>
    </div>
}